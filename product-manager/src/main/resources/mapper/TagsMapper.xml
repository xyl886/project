<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.love.product.mapper.TagsMapper">
    <insert id="savePostsTags">
        insert ignore into  posts_tag(posts_id,tag_id) values
        <foreach collection="tagList" item="tagsId" index="index" separator=",">
            ( #{posts_id},#{tagsId})
        </foreach>
    </insert>


    <select id="getTagNameById" resultType="java.lang.String">
        <!-- 根据 tagId 获取 tagName -->
            SELECT tag_name FROM tags WHERE id = #{tagId}
    </select>

    <select id="selectAll">

    </select>
</mapper>
